@model IEnumerable<WebSiteJeBouniqueV_2.DAL.Tbl_OrderP>

@{
    ViewBag.Title = "Orders";
    Layout = "~/Views/Shared/AdminLayoutPage.cshtml";
}


<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        Orders
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>N° Order</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>City</th>
                        <th>Country</th>
                        <th>Code Postale</th>
                        <th>Phone Number</th>
                        <th>Totale</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.FirstName</td>
                            <td>@item.LastName</td>
                            <td>@item.City</td>
                            <td>@item.Country</td>
                            <td>@item.CodePostal</td>
                            <td>@item.PhoneNumber</td>
                            <td>@item.Total</td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>
